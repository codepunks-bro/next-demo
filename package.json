{
  "name": "next-demo",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:turbopack": "next dev --turbo",
    "build": "next build",
    "build:turbopack": "next build --turbo",
    "start": "next start",
    "lint": "eslint . --max-warnings=0",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "check": "npm run lint && npm run typecheck",
    "format": "prettier \"**/*.{ts,tsx,js,jsx,json,md,css}\" --write",
    "format:check": "prettier \"**/*.{ts,tsx,js,jsx,json,md,css}\" --check",
    "test": "npm run test:unit",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:e2e": "playwright test",
    "prepare": "husky install",
    "analyze:lighthouse": "lighthouse http://localhost:3000 --config-path=./lighthouse.config.cjs --output=json --output-path=./.lighthouse/report.json",
    "analyze:rum": "node scripts/print-web-vitals.js"
  },
  "dependencies": {
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "next": "16.0.1"
  },
  "devDependencies": {
    "typescript": "^5",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@tailwindcss/postcss": "^4",
    "tailwindcss": "^4",
    "eslint": "^9",
    "eslint-config-next": "16.0.1",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "lint-staged": "^15.2.7",
    "husky": "^9.0.10",
    "vitest": "^2.1.3",
    "@vitest/coverage-v8": "^2.1.3",
    "@testing-library/react": "^16.0.0",
    "@testing-library/jest-dom": "^6.4.5",
    "@testing-library/user-event": "^14.5.1",
    "playwright": "^1.47.0",
    "@vitejs/plugin-react": "^4.3.1",
    "jsdom": "^25.0.1",
    "lighthouse": "^12.1.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": "prettier --write"
  }
}
